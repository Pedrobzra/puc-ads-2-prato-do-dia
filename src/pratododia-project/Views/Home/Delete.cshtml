@model pratododia_project.Models.Ingrediente

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-danger">Delete Ingredient</h1>

<h3>Are you sure you want to delete this ingredient?</h3>

<div class="card border-danger mb-4">
    <div class="card-body">
        <h4 class="card-title text-danger">Ingredient Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Categoria)</dd>

            <dt class="col-sm-3">Restriction</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Restricao)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="IdIngrediente" />
    <div class="d-flex justify-content-start gap-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ListIngredient" class="btn btn-secondary">Back to List</a>
    </div>
</form>
