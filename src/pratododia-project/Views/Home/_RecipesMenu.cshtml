@model IEnumerable<Receita>


@foreach (var receita in Model)
{
    <a class="card text-decoration-none text-black" style="max-width:360px; min-width:250px" asp-controller="Receitas" asp-action="Details" asp-route-id=@receita.IdReceita>

        <div class="recipe card-img-top form-group align-self-center d-flex justify-content-center align-items-center w-100" style="min-width:360px; max-height: 250px; min-height:250px">
            <img class="w-100 h-100" src="@receita.CaminhoImg" style="object-fit: cover;object-position: center;">
        </div>

        <div class="card-body d-flex f-column justify-content">
            <h4 class="card-title text-center mb-3" style="text-decoration: none;">@receita.NomeReceita</h4>
            <div class="card-text d-flex flex-column gap-2">
                <div class="d-flex flex-row justify-content-evenly">
                    <div class="f-row ali-center gap-regular">
                        <div class="icon-regular">
                            <img src="img/icons/difficulty.png">
                        </div>
                        <span class="attributeValue" id="difficulty">@receita.Dificuldade</span>
                    </div>
                    <div class="f-row ali-center gap-regular">
                        <div class="icon-regular">
                            <img src="img/icons/clock.png">
                        </div>
                        <span class="attributeValue" id="preparationTime">
                            @receita.TempoPreparo.ToString(@"hh\:mm")
                        </span>
                    </div>
                </div>
                <div class="f-row ali-center gap-regular align-self-center">
                    <div class="icon-regular">
                        <img src="img/icons/rating.png">
                    </div>
                    <span class="attributeValue">
                        @if (receita.Avaliacao != 0)
                        {
                            @receita.Avaliacao.ToString("F1")
                        }
                        else
                        {
                            <span>Sem avaliação</span>
                        }
                    </span>
                </div>
            </div>
        </div>
    </a>
}