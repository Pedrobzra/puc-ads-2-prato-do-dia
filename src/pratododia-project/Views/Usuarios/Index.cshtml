@model IEnumerable<pratododia_project.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}
<div class="container">

    <h1 class="title text-center my-4">Index</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table">
            <tr>
                <th>@Html.DisplayNameFor(model => model.NomeUsuario)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.IsAdmin)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NomeUsuario)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        @if (item.IsAdmin)
                        {
                            <span class="badge bg-success">Admin</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">User</span>
                        }
                    </td>
                    <td>
                        @if (User.IsInRole("True"))
                        {
                            <div class="d-flex flex-wrap gap-1">
                                <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>