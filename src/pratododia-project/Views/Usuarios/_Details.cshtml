@model pratododia_project.ViewModels.UsuarioIngredienteViewModel

<div class="row">
    <div class="col-md-4 flex-grow-1">
        <div class="d-flex flex-column">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Usuario.IdUsuario" />
            <div class="form-group my-3 align-self-center d-flex justify-content-center align-items-center w-100" style="max-width: 180px;height: 180px">
                <img class="w-100 h-100 " src="~/@Model.Usuario.CaminhoImg" style="object-fit: cover;object-position: center;border-radius: 90px">
            </div>
            <form asp-action="ProfilePic" enctype="multipart/form-data" class="d-flex flex-column justify-content-center align-items-center">
                <button id="save-pic" class="btn btn-outline-success my-1" type="submit" style="display: none;">Salvar</button>
                <div>
                    <label for="formFileSm" class="form-label"></label>
                    <input class="form-control" id="usuario-image" name="file" type="file" accept="image/jpeg, image/png, image/jpg">
                    <input type="hidden" asp-for="Usuario.CaminhoImg" value="@Model.Usuario.CaminhoImg" />
                </div>
                
            </form>
            <div class="form-floating mt-3 mb-3">
                <input asp-for="Usuario.NomeUsuario" class="form-control" disabled placeholder="Nome" />
                <label asp-for="Usuario.NomeUsuario" class="control-label">Nome</label>
                <span asp-validation-for="Usuario.NomeUsuario" class="text-danger"></span>
            </div>
            <div class="form-floating mt-3 mb-3">
                <input asp-for="Usuario.Email" class="form-control" disabled placeholder="Email" />
                <label asp-for="Usuario.Email" class="control-label"></label>
                <span asp-validation-for="Usuario.Email" class="text-danger"></span>
            </div>
            <form class="d-flex flex-row justify-content-end my-3 gap-3" asp-action="Profile" method="get">
                <input type="hidden" name="edit" value="true" />
                <button class="btn btn-primary align-self-end" type="submit">Editar</button>
            </form>
        </div>
    </div>
</div>