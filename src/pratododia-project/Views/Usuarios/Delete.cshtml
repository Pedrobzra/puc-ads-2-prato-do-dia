@model pratododia_project.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <h1 class="text-danger title text-center my-4">Delete</h1>

    <h3 class="text-center">Are you sure you want to delete this user?</h3>
<div class="card border-danger mb-4">
    <div class="card-body">
        <h4 class="card-title text-danger">User Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NomeUsuario)</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3">Role</dt>
            <dd class="col-sm-9">
                @if (Model.IsAdmin)
                {
                    <span class="badge bg-success">Admin</span>
                }
                else
                {
                    <span class="badge bg-secondary">User</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="IdUsuario" />
    <div class="d-flex justify-content-start gap-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
</div>