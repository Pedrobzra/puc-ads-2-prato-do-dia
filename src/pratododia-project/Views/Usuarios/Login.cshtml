@model pratododia_project.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

@{
    ViewBag.ShowHeader = false;
}

<div class="align-self-center d-flex flex-column align-items-center justify-content-center flex-grow-1 py-4" style="max-width:90%;">
    <a class="w-50 mb-5" asp-action="Index" asp-controller="Home"><img class="img-fluid" src="../img/extendedLogo.png" /></a>
    <form asp-action="Login" class="d-flex flex-column flex-lg-row card shadow border-0" style="min-height:550px; max-width:900px;">
        <div class="card-body d-flex flex-column align-items-center justify-content-evenly rounded5" style="min-height:350px; min-width:50%;">
            <h2 class="text-center">Entrar</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group w-75 d-flex flex-column">
                <div class="form-floating mb-3 mt-3">
                    <input asp-for="Email" type="text" class="form-control" placeholder="Email">
                    <label asp-for="Email">E-mail</label>
                    <span asp-validation-for="Email" class="text-danger text-break" style="font-size: 13px"></span>
                </div>
                <div class="form-floating mb-3 mt-3">
                    <input asp-for="Senha" class="form-control" placeholder="Senha">
                    <label asp-for="Senha">Senha</label>
                    <span asp-validation-for="Senha" class="text-danger text-break" style="font-size: 13px"></span>
                </div>
                <p class="text-danger text-center">@ViewBag.Message</p>
            </div>
            <input type="submit" value="Acessar" class="w-50 btn btn-primary align-self-center" />
        </div>
        <div class="card-body d-flex flex-column align-items-center justify-content-evenly rounded-end" style="background: linear-gradient(to bottom, var(--red), var(--orange));min-height:350px; min-width:50%">
            <h1 class="text-center text-light">Não tem uma conta?</h1>
            <h4 class="w-75 text-center text-light">Que tal criar uma conta para ter acesso a várias ferramentas exclusivas?</h4>
            <a asp-action="Create" asp-controller="Usuarios" class="w-50 btn btn-outline-light">Criar Conta</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
